        script.
            var webSocket = new WebSocket('ws://localhost:8005') // 연결할 서버 주소로 웹소켓 생성(프로토콜: ws)
            webSocket.onopen = function() {         // 연결이 이뤄지면
                console.log('서버와 웹 소켓 연결 성공')
            } 
            // 서버로부터 메시지를 받으면 답장을 보냄
            webSocket.onmessage = function(event) {
                console.log(event.data)
                webSocket.send('클라이언트에서 서버로 답장을 보냅니다.')
            }